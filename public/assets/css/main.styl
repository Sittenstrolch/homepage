@require 'variables'

@import 'landingPage'

html
  height 100%

html body
  width 100%
  height 100%
  margin 0
  padding 0
  display block
  font medium
  font-family fontPrimary, fontSecondary
  text-align center
  color  font_color
  background bgColor

.full-height
  height 100%

.main-section
  padding-top barHeight
  margin-top -(barHeight)

.activeMaster
  background highlightColor

.topPadding
  padding-top 1rem

.highlight
  background-color #ffff00

.warningIcon
  color rejectColor

.landingPage
  background-image url(../img/landingPage.jpg)
  background-size 150% auto
  background-repeat no-repeat
  height 100%


@media only screen and (max-width: 800px)
  .landingPage
    background-image url(../img/landingPage_mobile.jpg)
    background-size 150% 100%
    background-repeat no-repeat
    height 100%


.contentWrapper
  text-align center
  position absolute
  background rgba(216,216,216,0.6)
  color white
  height 80%
  width 80%
  margin auto
  top 0
  bottom 0
  left 0
  right 0

.registerButton
  position absolute
  bottom 0
  margin 0 auto 3rem auto
  left 0
  right 0
  opacity 1
  width 8rem
  border 1px solid white
  background rgba(92,92,92,0.8)
  padding 0.6rem 1rem
  border-radius 0.3rem
  display inline-block


  &:hover
    background primaryColor
    cursor pointer

.contentText
  color black
  text-align left
  padding 6rem
  height 100%
  overflow auto

.thanks
  font-size 2rem